{
    "name" : "blink/seed",
    "description": "A seed application for Blink Framework",
    "authors" : [
        {
            "name" : "Jin Hu",
            "email": "bixuehujin@gmail.com"
        }
    ],
    "require": {
        "blink/blink": "0.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "app\\": "src",
            "app\\tests\\": "tests"
        }
    },
    "minimum-stability": "stable",
    "config": {
        "vendor-dir": "vendor"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"mkdir('runtime/sessions');\""
        ]
    }
}
